{
  "dxt_version": "0.1",
  "name": "spark-management",
  "display_name": "Check Point Spark Management MCP",
  "version": "0.0.1",
  "description": "MCP server for Spark Management",
  "long_description": "This extension provides MCP (Model Context Protocol) integration for Check Point Spark Management. It allows Claude Desktop to interact with Check Point's Spark Management services and APIs.",
  "author": {
    "name": "Check Point Software Technologies Ltd.",
    "email": "support@checkpoint.com",
    "url": "https://www.checkpoint.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CheckPointSW/mcp-servers"
  },
  "homepage": "https://www.checkpoint.com",
  "documentation": "https://github.com/CheckPointSW/mcp-servers",
  "support": "https://github.com/CheckPointSW/mcp-servers/issues",
  "server": {
    "type": "node",
    "entry_point": "server/index.js",
    "mcp_config": {
      "command": "node",
      "args": [
        "${__dirname}/server/index.js"
      ],
      "env": {
        "CLIENT_ID": "${user_config.client_id}",
        "SECRET_KEY": "${user_config.secret_key}",
        "INFINITY_PORTAL_URL": "${user_config.infinity_portal_url}",
        "REGION": "${user_config.region}"
      }
    }
  },
  "tools_generated": true,
  "prompts_generated": false,
  "keywords": [
    "checkpoint",
    "security",
    "mcp",
    "api",
    "spark-management"
  ],
  "license": "MIT",
  "compatibility": {
    "claude_desktop": ">=0.11.6",
    "platforms": [
      "darwin",
      "win32",
      "linux"
    ],
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "user_config": {
    "client_id": {
      "type": "string",
      "title": "Client Id For Spark Management Authentication",
      "description": "Client ID for Spark Management authentication",
      "required": true
    },
    "secret_key": {
      "type": "string",
      "title": "Secret Key For Spark Management Authentication",
      "description": "Secret key for Spark Management authentication",
      "required": true,
      "sensitive": true
    },
    "infinity_portal_url": {
      "type": "string",
      "title": "Infinity Portal Base Url (e",
      "description": "Infinity Portal base URL (e.g., https://portal.checkpoint.com)",
      "required": true
    },
    "region": {
      "type": "string",
      "title": "Region For Cloud Infrastructure (eu",
      "description": "Region for cloud infrastructure (EU, US, STG, LOCAL)",
      "required": false,
      "default": "EU"
    }
  }
}
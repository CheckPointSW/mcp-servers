{
  "name": "@chkp/spark-management-mcp",
  "version": "0.1.1",
  "description": "MCP server for Spark Management",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "spark-management-mcp": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CheckPointSW/mcp-servers.git",
    "directory": "packages/spark-management"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run build:bundle && npx shx chmod +x ./dist/index.js && npx shx cp src/server-config.json dist/",
    "build:bundle": "node ../../bundle-mcp.js",
    "build:tsc": "npx tsc && npx shx chmod +x ./dist/index.js && npx shx cp src/server-config.json dist/",
    "dev": "tsc --watch",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.1",
    "axios": "^1.12.1",
    "commander": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@chkp/quantum-infra": "*",
    "@chkp/mcp-utils": "*",
    "@types/node": "^18.15.11",
    "typescript": "^5.0.4"
  }
}

{
  "name": "@chkp/https-inspection-mcp",
  "version": "0.4.1",
  "description": "HTTPS Inspection MCP server for Check Point products",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "https-inspection-mcp": "./dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build:windows": "tsc && copy src\\server-config.json dist\\",
    "build:unix": "tsc && chmod +x ./dist/index.js && cp src/server-config.json dist/",
    "build": "node -e \"process.platform === 'win32' ? require('child_process').execSync('npm run build:windows', {stdio: 'inherit'}) : require('child_process').execSync('npm run build:unix', {stdio: 'inherit'})\"",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "build:all": "npm run clean && npm run build"
  },
  "dependencies": {
    "@chkp/mcp-utils": "*",
    "@modelcontextprotocol/sdk": "^1.11.1",
    "commander": "^11.0.0",
    "zod": "^3.22.4",
    "@chkp/quantum-infra": "*"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "typescript": "^5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CheckPointSW/mcp-servers.git",
    "directory": "packages/https-inspection"
  },
  "license": "MIT"
}
